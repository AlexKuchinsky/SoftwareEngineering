<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/TunisianBrightSandScarf">

    <RelativeLayout
        android:id="@+id/mainActivityLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:text="@string/app_name"
            android:textColor="@color/TunisianRedFeska"
            android:textSize="72sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="165dp"
            android:textColor="@color/TunisianRedFeska"
            android:textIsSelectable="true"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/IMEITextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="214dp"
            android:textColor="@color/TunisianRedFeska"
            android:textIsSelectable="true"
            android:textSize="24sp"
            android:textStyle="bold|italic" />


        <Button
            android:id="@+id/showIMEIButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/IMEITextView"
            android:layout_centerHorizontal="true"
            android:background="@color/TunisianGrayScarf"
            android:gravity="center"
            android:text="@string/get_imei_text" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>